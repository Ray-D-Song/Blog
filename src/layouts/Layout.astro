---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Explore Ray-D-Song's Blog for insights on programming in both Chinese and English." />
		<meta name="viewport" content="width=device-width" />
    <meta name="keywords" content="programming, vue, vite, astro, javascript, typescript, nodejs, deno, react, svelte, angular, frontend, backend, fullstack, web development, ray-d-song" />
    <link rel="sitemap" href="/sitemap-index.xml" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
    <script>
      const themeCache = window.localStorage.getItem('theme')
      if(themeCache === 'dark') {
        document.documentElement.classList.value = 'dark'
      } else {
        document.documentElement.classList.value = 'light'
      }
      document.body.classList.remove('!hidden')

      function handleLanguage() {
        const languageCache = window.localStorage.getItem('language')
        const href = window.location.href
        const blogPath = pathname.split('/').slice(2).join('/')
        if(languageCache === 'zh-CN' && !href.includes('zh-cn')) {
          window.location.href = `/zh-cn/${blogPath}`
        }
        if(languageCache === 'en' && !href.includes('en')) {
          window.location.href = `/en/${blogPath}`
        }
      }
      const pathname = window.location.pathname
      if(pathname !== '/' && pathname !== '') {
        handleLanguage()
      }
    </script>
	</head>
	<body class="!hidden dark:bg-dark bg-light dark:text-dark text-light relative flex flex-col min-h-screen w-full">
    <header class="w-full backdrop-blur-xl fixed left-0 top-0 flex justify-between z-20">
      <div
        class="i-mdi-dinosaur-pixel w-10 h-10 mx-2 my-1 hover:cursor-pointer hover:opacity-80"
        onclick="window.location.href = '/'"
      />
      <div class="flex">
        <div class="relative w-6 h-6 m-2">
          <div 
            id="lang-icon"
            class="i-mdi-language w-6 h-6 absolute hover:cursor-pointer hover:opacity-80"
          />
          <div
            id="icon-container"
            class="absolute z-30 top-0 right-0 shadow-xl border bg-light dark:bg-dark border-gray-4 w-150px text-1.2rem flex flex-col gap-1 items-baseline mt-7 p-2 rounded-lg"
            style="display: none;"
          >
            <button data-lang="zh-CN" class="lang-btn hover:bg-#FAF4ED dark:hover:bg-[#191B26] w-full">中文</button>
            <button data-lang="en" class="lang-btn hover:bg-#FAF4ED dark:hover:bg-[#191B26] w-full">English</button>
          </div>
        </div>
        <div 
          class="action-btn i-mdi-apps w-6 h-6 m-2 hover:cursor-pointer hover:opacity-80"
        />
        <div
          class="action-btn i-mdi-github w-6 h-6 m-2 hover:cursor-pointer hover:opacity-80"
        />
        <div
          class="action-btn i-mdi-rss w-6 h-6 m-2 hover:cursor-pointer hover:opacity-80"
        />
        <div
          class="action-btn i-mdi-theme-light-dark w-6 h-6 m-2 hover:cursor-pointer hover:opacity-80"
        />
      </div>
    </header>
    <div class="py-20 flex-grow-1">
      <slot />
    </div>
    <footer class="absolute bottom-0 text-center w-full font-450">
      &copy; 2019 Ray-D-Song. All Rights Reserved
    </footer>
	</body>
</html>

<script>
const actionBtns = document.querySelectorAll('.action-btn')
const currentLang = window.localStorage.getItem('language') || 'zh-CN'
actionBtns.forEach((btn) => {
  btn.addEventListener('click', () => {
    switch (btn.classList[1]) {
      case 'i-mdi-apps':
        window.location.href = `/${currentLang.toLowerCase()}/archives`
      case 'i-mdi-github':
        window.open('https://github.com/ray-d-song')
      break
      case 'i-mdi-rss':
        window.open('https://ray-d-song.com/feed.xml')
      break
      case 'i-mdi-theme-light-dark':
        toggleTheme()
    }
  })
})

function toggleTheme() {
  const theme = document.documentElement.classList[0]
  if (theme === 'dark') {
    document.documentElement.classList.value = 'light'
    window.localStorage.setItem('theme', 'light')
  } else {
    document.documentElement.classList.value = 'dark'
    window.localStorage.setItem('theme', 'dark')
  }
}
</script>

<script>
const iconContainer = document.querySelector<HTMLElement>('#icon-container')
document.querySelector<HTMLElement>('#lang-icon')?.addEventListener('click', () => {
  if(iconContainer)
    iconContainer.style.display = iconContainer.style.display === 'none' ? 'block' : 'none'
})

document.querySelectorAll<HTMLButtonElement>('.lang-btn').forEach((btn) => {
  btn.addEventListener('click', () => {
    const lang = btn.dataset.lang as string
    window.localStorage.setItem('language', lang)
    window.location.reload()
  })
})
</script>

